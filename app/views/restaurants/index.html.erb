<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <h1>All restaurants</h1>
    </div>
  </div>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-md-4 col-md-offset-3">
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <p><%= link_to "Create New Restaurant", new_restaurant_path, class: "btn btn-primary" %></p>
    </div>
  </div>

</div>
