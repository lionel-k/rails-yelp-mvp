<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <h1><%= @restaurant.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <p><strong>Address:</strong> <%= @restaurant.address %></p>
      <p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
      <p><strong>Category:</strong> <%= @restaurant.category %></p>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= render 'reviews/form_review' %>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <p><strong>Reviews</strong></h>
      <% reviews = Review.where(restaurant: @restaurant).order(created_at: :desc) %>
      <% reviews.each do |review| %>
        <p><%= review.content %> - <%= "*" * review.rating %></p>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <p>
        <%= link_to "Back To List", root_path %> |
        <%= link_to "Create a new review", new_restaurant_review_path(@restaurant) %>
      </p>
    </div>
  </div>

</div>
