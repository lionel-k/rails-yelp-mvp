<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Create A New Restaurant</h3>
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :phone_number %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.submit "Create a new restaurant" ,class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
