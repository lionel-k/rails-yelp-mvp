<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Create A New Review for <%= @restaurant.name %></h3>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Create a new review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
